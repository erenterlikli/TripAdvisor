    <script type="~/web2/text/javascript" src="js/move-top.js"></script>
    <script type="~/web2/text/javascript" src="js/easing.js"></script>
    <!--/script-->
    <script type="~/web2/text/javascript">
			jQuery(document).ready(function($) {
				$(".scroll").click(function(event){
					event.preventDefault();
					$('html,body').animate({scrollTop:$(this.hash).offset().top},900);
				});
			});
    </script>
    <!---->

</head>

   
         
    <!--/header-->
    <div class="single" style="margin-left:180px;">
        <div class="container">
            <div class="col-md-8 single-main">
                <div class="single-grid">
                    <br />
                    @foreach (var b in Model.Deger1)
                    {
                    <img src="@b.BlogFoto" alt="" style="width:730px; height:400px;" />
                    <br />
                    <br />
                    <h3> <a href="/Blog/BlogDetay/@b.ID">@b.Baslik</a></h3>
                    <p>@b.Aciklama</p>
                       
                    }
                </div>
                
                <br />

            </div>

            <div class="col-md-4 side-content" >
                <div class="recent">
                    <br />
                    <h3>SON YAZILAR</h3>
                    @foreach (var sy in Model.Deger3)
                    {
                    <ul>
                        <li><a href="/Blog/BlogDetay/@sy.ID">@sy.Baslik</a></li>
                        
                    </ul>
                    }
                </div>
                <br />
                
                
                
               
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
  
   




