@using SeyahatSitesi.Models.Sınıflar
@model List<Blog>
@{
    Layout = null;
}

<div class="padding">
    <h4>Bu Haftanın Top 10'u</h4>
    <ul class="list list-pad">
        @{ int i = 0;}
        @foreach (var top in Model)
        {
        <li class="list-bg"><span>@{i++; } @i.</span><a href="/Blog/BlogDetay/@top.ID">@top.Baslik</a></li>
        }
    </ul>
    <a href="/Blog/Index" class="link1">Tüm blogları gör</a>
</div>
