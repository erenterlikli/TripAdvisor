@using SeyahatSitesi.Models.Sınıflar
@model List<Blog>
@{
    Layout = null;
}

<div class="con-bot">
    @{ int a = 0;}
    @foreach (var p1 in Model)
    {
        a++;
        var ss = "left";
        if(a==3)
        {
            ss = "right";
        }
    <div class="@ss">
        <div class="bot-left">
            <img src="@p1.BlogFoto" alt=""  style="width:600px; height:200px;"/>
        </div>
        <div class="left-text">
            <h4>@p1.Baslik</h4>

            <p>@p1.Aciklama.Substring(0, 200)...</p>
            <p><a href="/Blog/BlogDetay/@p1.ID"><span class="read">Devamını Oku >></span></a></p>
            <span class="">@p1.Tarih.ToString("dd.MM.yyyy")</span>
        </div>
    </div>
    }

 
    <div class="clear"></div>
</div>